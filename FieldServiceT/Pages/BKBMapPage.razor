        <MapsCenterPosition Latitude="40.7209" Longitude="-73.9680" />
        <MapsZoomSettings Enable="true" ZoomFactor="10" />
        <MapsLayers>
            <MapsLayer LayerType="ShapeLayerType.OSM">
                <MapsMarkerSettings>
                    <MapsMarker Visible="true" DataSource="Cities" Shape="MarkerType.Balloon" Height="35" Width="35" AnimationDuration="700">
                        <MapsMarkerTooltipSettings ValuePath="Name" Visible="true">
                        </MapsMarkerTooltipSettings>
                    </MapsMarker>
                </MapsMarkerSettings>
                <MapsShapeSettings Fill="lightgray"></MapsShapeSettings>
            </MapsLayer>
        </MapsLayers>
    </SfMaps>
</div>

